<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro3Fragment"
    android:background="@drawable/fragment3bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#34FFFFFF"
        android:gravity="center">

        <TextView
            android:id="@+id/fragment1TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:text="REMEMBER"
            android:textColor="#E1CB0A"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/fragment1text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment1TitleText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:textColor="#fffbf8"
            android:text="Just when you're about to give up, remember why you started"
            android:textSize="22sp" />


    </RelativeLayout>

</FrameLayout>